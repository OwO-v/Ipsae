<Application x:Class="Ipsae.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Ipsae"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <Color x:Key="BgDark">#111111</Color>
        <Color x:Key="BgContent">#1A1A1A</Color>
        <Color x:Key="BorderDark">#2A2A2A</Color>
        <Color x:Key="Accent">#C5D89D</Color>
        <Color x:Key="AccentBlue">#2980B9</Color>
        <Color x:Key="TextPrimary">#E0E0E0</Color>
        <Color x:Key="TextSecondary">#888888</Color>
        <Color x:Key="StatusGreen">#27AE60</Color>

        <SolidColorBrush x:Key="BgDarkBrush" Color="{StaticResource BgDark}"/>
        <SolidColorBrush x:Key="BgContentBrush" Color="{StaticResource BgContent}"/>
        <SolidColorBrush x:Key="BorderDarkBrush" Color="{StaticResource BorderDark}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>
        <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
        <SolidColorBrush x:Key="StatusGreenBrush" Color="{StaticResource StatusGreen}"/>
    </Application.Resources>
</Application>
