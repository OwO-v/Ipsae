<UserControl x:Class="Ipsae.View.Pages.ServiceStatusPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ipsae.View.Pages"
             xmlns:svc="clr-namespace:Ipsae.Service"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             FontFamily="Segoe UI">

    <Grid Background="{StaticResource BgMain}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="22"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20,0" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource BackButton}" Command="{Binding NavigateHomeCommand}">
                    <TextBlock><Run Text="← "/><Run Text="홈"/></TextBlock>
                </Button>
                <Border Width="1" Height="16" Background="{StaticResource Border}" Margin="12,0"/>
                <TextBlock Text="서비스 상태" FontSize="13" FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{StaticResource BgPanel}"
                    BorderBrush="{StaticResource Border}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <UniformGrid Grid.Row="0" Columns="2" Margin="12,12,12,0">
                        <Button Content="상태" Command="{Binding SwitchToStatusTabCommand}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource PanelTabButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsStatusTabActive}" Value="True">
                                            <Setter Property="Background" Value="#1A1A1A"/>
                                            <Setter Property="Foreground" Value="{StaticResource Accent}"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="통계" Command="{Binding SwitchToStatsTabCommand}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource PanelTabButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsStatusTabActive}" Value="False">
                                            <Setter Property="Background" Value="#1A1A1A"/>
                                            <Setter Property="Foreground" Value="{StaticResource Accent}"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </UniformGrid>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="14">
                        <Grid>
                            <StackPanel Visibility="{Binding IsStatusTabActive, Converter={StaticResource BoolToVisibility}}">
                                <Border Background="{StaticResource BgCard}"
                                        BorderBrush="{StaticResource Border}" BorderThickness="1"
                                        Padding="18" Margin="0,0,0,10">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,14">
                                            <Ellipse Width="6" Height="6" VerticalAlignment="Center" Margin="0,0,8,0"
                                                     Fill="{Binding State.StatusColor}">
                                                <Ellipse.Effect>
                                                    <DropShadowEffect Color="{Binding State.StatusGlowColor}" BlurRadius="6"
                                                                      ShadowDepth="0" Opacity="0.8"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                            <TextBlock Text="{Binding ServiceStatusText}" FontSize="12"
                                                       Foreground="#888888"/>
                                        </StackPanel>
                                        <Button HorizontalAlignment="Stretch"
                                                Command="{Binding ToggleServiceCommand}">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource ServiceToggleButton}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding State.Status}" Value="{x:Static svc:ServiceStatus.Inactive}">
                                                            <Setter Property="Content" Value="START SERVICE"/>
                                                            <Setter Property="Foreground" Value="{StaticResource StatusGreen}"/>
                                                            <Setter Property="BorderBrush" Value="#203320"/>
                                                            <Setter Property="Tag" Value="#101A10"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding State.Status}" Value="{x:Static svc:ServiceStatus.Starting}">
                                                            <Setter Property="Content" Value="STARTING..."/>
                                                            <Setter Property="Foreground" Value="{StaticResource StatusOrange}"/>
                                                            <Setter Property="BorderBrush" Value="#332B20"/>
                                                            <Setter Property="Tag" Value="#1A1510"/>
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding State.Status}" Value="{x:Static svc:ServiceStatus.Stopping}">
                                                            <Setter Property="Content" Value="STOPPING..."/>
                                                            <Setter Property="Foreground" Value="{StaticResource StatusOrange}"/>
                                                            <Setter Property="BorderBrush" Value="#332B20"/>
                                                            <Setter Property="Tag" Value="#1A1510"/>
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Border>

                                <UniformGrid Columns="2">
                                    <Border Background="{StaticResource BgCard}"
                                            BorderBrush="{StaticResource Border}" BorderThickness="1"
                                            Padding="12,14" Margin="0,0,4,0">
                                        <StackPanel>
                                            <TextBlock Text="INSPECTED" FontSize="9" Foreground="{StaticResource TextMuted}"
                                                       Margin="0,0,0,6"/>
                                            <TextBlock FontSize="20" FontWeight="Light"
                                                       Foreground="{StaticResource StatBlue}"
                                                       Text="{Binding InspectedCount}"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Background="{StaticResource BgCard}"
                                            BorderBrush="{StaticResource Border}" BorderThickness="1"
                                            Padding="12,14" Margin="4,0,0,0">
                                        <StackPanel>
                                            <TextBlock Text="THREATS" FontSize="9" Foreground="{StaticResource TextMuted}"
                                                       Margin="0,0,0,6"/>
                                            <TextBlock FontSize="20" FontWeight="Light"
                                                       Foreground="{StaticResource StatGreen}"
                                                       Text="{Binding ThreatCount}"/>
                                        </StackPanel>
                                    </Border>
                                </UniformGrid>
                            </StackPanel>

                            <StackPanel Visibility="{Binding IsStatusTabActive, Converter={StaticResource BoolToVisibility}, ConverterParameter=invert}">
                                <Border Background="{StaticResource BgCard}"
                                        BorderBrush="{StaticResource Border}" BorderThickness="1"
                                        Padding="18" Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="INTERFACE" FontSize="9" Foreground="{StaticResource TextMuted}"
                                                   Margin="0,0,0,6"/>
                                        <TextBlock Text="{Binding InterfaceName}" FontSize="13" Foreground="#888888"
                                                   FontFamily="Consolas"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="{StaticResource BgCard}"
                                        BorderBrush="{StaticResource Border}" BorderThickness="1"
                                        Padding="18" Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="UPTIME" FontSize="9" Foreground="{StaticResource TextMuted}"
                                                   Margin="0,0,0,6"/>
                                        <TextBlock Text="{Binding Uptime}" FontSize="13" Foreground="#888888"
                                                   FontFamily="Consolas"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="{StaticResource BgCard}"
                                        BorderBrush="{StaticResource Border}" BorderThickness="1"
                                        Padding="18">
                                    <StackPanel>
                                        <TextBlock Text="MAX DELAY" FontSize="9" Foreground="{StaticResource TextMuted}"
                                                   Margin="0,0,0,6"/>
                                        <TextBlock Text="{Binding MaxDelay}" FontSize="13" Foreground="#888888"
                                                   FontFamily="Consolas"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderBrush="{StaticResource Border}" BorderThickness="0,0,0,1"
                        Padding="16,8">
                    <Grid>
                        <TextBlock Text="LIVE LOG" FontSize="11" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextMuted}" VerticalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Right" FontSize="10" Foreground="#333333"
                                   VerticalAlignment="Center" Text="{Binding LogCount}"/>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16,12">
                        <TextBlock FontFamily="Consolas" FontSize="11" Foreground="{StaticResource StatusGreen}">
                            <Run Text=">"/><Run Text=" ▌"/>
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <Border Grid.Row="2" BorderBrush="{StaticResource Border}" BorderThickness="0,1,0,0"
                Background="{StaticResource BgMain}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <TextBlock Text="IPSAE v1.0.0" FontSize="9" Foreground="#2A2A2A" Margin="0,0,14,0"/>
                <TextBlock Text="|" FontSize="9" Foreground="#1A1A1A" Margin="0,0,14,0"/>
                <TextBlock FontSize="9" Foreground="#2A2A2A" Margin="0,0,14,0"
                           Text="{Binding InterfaceName}"/>
                <TextBlock Text="|" FontSize="9" Foreground="#1A1A1A" Margin="0,0,14,0"/>
                <TextBlock FontSize="9" Foreground="#2A2A2A" Margin="0,0,14,0"
                           Text="{Binding FooterPackets}"/>
                <TextBlock Text="|" FontSize="9" Foreground="#1A1A1A" Margin="0,0,14,0"/>
                <TextBlock FontSize="9" Text="{Binding State.StatusLabel}"
                           Foreground="{Binding State.StatusColor}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
