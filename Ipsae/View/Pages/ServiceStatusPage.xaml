<Page x:Class="Ipsae.View.Pages.ServiceStatusPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ipsae.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="ServiceStatusPage" FontFamily="Segoe UI">

    <Page.Resources>
        <SolidColorBrush x:Key="BgMain" Color="#0C0C0C"/>
        <SolidColorBrush x:Key="BgPanel" Color="#0E0E0E"/>
        <SolidColorBrush x:Key="BgCard" Color="#131313"/>
        <SolidColorBrush x:Key="Border" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#DDDDDD"/>
        <SolidColorBrush x:Key="TextDim" Color="#444444"/>
        <SolidColorBrush x:Key="TextMuted" Color="#555555"/>
        <SolidColorBrush x:Key="Accent" Color="#C5D89D"/>
        <SolidColorBrush x:Key="StatusGreen" Color="#44AA55"/>
        <SolidColorBrush x:Key="DangerRed" Color="#CC5555"/>
        <SolidColorBrush x:Key="StatBlue" Color="#88CCFF"/>
        <SolidColorBrush x:Key="StatGreen" Color="#55BB77"/>

        <Style x:Key="BackButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="12,3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1A1A1A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PanelTabButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#444444"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0,7"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1A1A1A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PanelTabButtonActive" TargetType="Button" BasedOn="{StaticResource PanelTabButton}">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="{StaticResource Accent}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
        </Style>

        <Style x:Key="StopButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#332020"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DangerRed}"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="0,7"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1A1010"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource BgMain}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="22"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20,0" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource BackButton}" x:Name="BackButton" Click="BackButton_Click">
                    <TextBlock><Run Text="← "/><Run Text="홈"/></TextBlock>
                </Button>
                <Border Width="1" Height="16" Background="{StaticResource Border}" Margin="12,0"/>
                <TextBlock Text="서비스 상태" FontSize="13" FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{StaticResource BgPanel}"
                    BorderBrush="{StaticResource Border}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <UniformGrid Grid.Row="0" Columns="2" Margin="12,12,12,0">
                        <Button Content="상태" Style="{StaticResource PanelTabButtonActive}"
                                x:Name="TabStatusButton" Click="TabStatusButton_Click"/>
                        <Button Content="통계" Style="{StaticResource PanelTabButton}"
                                x:Name="TabStatsButton" Click="TabStatsButton_Click"/>
                    </UniformGrid>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="14">
                        <Grid>
                            <StackPanel x:Name="StatusPanel" Visibility="Visible">
                                <Border Background="{StaticResource BgCard}"
                                        BorderBrush="{StaticResource Border}" BorderThickness="1"
                                        Padding="18" Margin="0,0,0,10">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,14">
                                            <Ellipse Width="6" Height="6" Fill="{StaticResource StatusGreen}"
                                                     VerticalAlignment="Center" Margin="0,0,8,0">
                                                <Ellipse.Effect>
                                                    <DropShadowEffect Color="#44AA55" BlurRadius="6"
                                                                      ShadowDepth="0" Opacity="0.8"/>
                                                </Ellipse.Effect>
                                            </Ellipse>
                                            <TextBlock Text="잎새가 동작하고 있습니다." FontSize="12"
                                                       Foreground="#888888" x:Name="ServiceStatusText"/>
                                        </StackPanel>
                                        <Button Content="STOP SERVICE" Style="{StaticResource StopButton}"
                                                HorizontalAlignment="Stretch" x:Name="ToggleServiceButton"
                                                Click="ToggleServiceButton_Click"/>
                                    </StackPanel>
                                </Border>

                                <UniformGrid Columns="2">
                                    <Border Background="{StaticResource BgCard}"
                                            BorderBrush="{StaticResource Border}" BorderThickness="1"
                                            Padding="12,14" Margin="0,0,4,0">
                                        <StackPanel>
                                            <TextBlock Text="INSPECTED" FontSize="9" Foreground="{StaticResource TextMuted}"
                                                       Margin="0,0,0,6"/>
                                            <TextBlock FontSize="20" FontWeight="Light"
                                                       Foreground="{StaticResource StatBlue}"
                                                       x:Name="InspectedCountText" Text="0"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Background="{StaticResource BgCard}"
                                            BorderBrush="{StaticResource Border}" BorderThickness="1"
                                            Padding="12,14" Margin="4,0,0,0">
                                        <StackPanel>
                                            <TextBlock Text="THREATS" FontSize="9" Foreground="{StaticResource TextMuted}"
                                                       Margin="0,0,0,6"/>
                                            <TextBlock FontSize="20" FontWeight="Light"
                                                       Foreground="{StaticResource StatGreen}"
                                                       x:Name="ThreatCountText" Text="0"/>
                                        </StackPanel>
                                    </Border>
                                </UniformGrid>
                            </StackPanel>

                            <StackPanel x:Name="StatsPanel" Visibility="Collapsed">
                                <Border Background="{StaticResource BgCard}"
                                        BorderBrush="{StaticResource Border}" BorderThickness="1"
                                        Padding="18" Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="INTERFACE" FontSize="9" Foreground="{StaticResource TextMuted}"
                                                   Margin="0,0,0,6"/>
                                        <TextBlock Text="eno1" FontSize="13" Foreground="#888888"
                                                   FontFamily="Consolas" x:Name="InterfaceText"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="{StaticResource BgCard}"
                                        BorderBrush="{StaticResource Border}" BorderThickness="1"
                                        Padding="18" Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="UPTIME" FontSize="9" Foreground="{StaticResource TextMuted}"
                                                   Margin="0,0,0,6"/>
                                        <TextBlock Text="00:00:00" FontSize="13" Foreground="#888888"
                                                   FontFamily="Consolas" x:Name="UptimeText"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="{StaticResource BgCard}"
                                        BorderBrush="{StaticResource Border}" BorderThickness="1"
                                        Padding="18">
                                    <StackPanel>
                                        <TextBlock Text="MAX DELAY" FontSize="9" Foreground="{StaticResource TextMuted}"
                                                   Margin="0,0,0,6"/>
                                        <TextBlock Text="3 sec" FontSize="13" Foreground="#888888"
                                                   FontFamily="Consolas" x:Name="MaxDelayText"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderBrush="{StaticResource Border}" BorderThickness="0,0,0,1"
                        Padding="16,8">
                    <Grid>
                        <TextBlock Text="LIVE LOG" FontSize="11" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextMuted}" VerticalAlignment="Center"/>
                        <TextBlock HorizontalAlignment="Right" FontSize="10" Foreground="#333333"
                                   VerticalAlignment="Center" x:Name="LogCountText" Text="0 lines"/>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                              x:Name="LogScrollViewer">
                    <StackPanel Margin="16,12" x:Name="LogPanel">
                        <TextBlock FontFamily="Consolas" FontSize="11" Foreground="{StaticResource StatusGreen}">
                            <Run Text=">"/><Run Text=" ▌"/>
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <Border Grid.Row="2" BorderBrush="{StaticResource Border}" BorderThickness="0,1,0,0"
                Background="{StaticResource BgMain}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <TextBlock Text="IPSAE v1.0.0" FontSize="9" Foreground="#2A2A2A" Margin="0,0,14,0"/>
                <TextBlock Text="|" FontSize="9" Foreground="#1A1A1A" Margin="0,0,14,0"/>
                <TextBlock FontSize="9" Foreground="#2A2A2A" Margin="0,0,14,0"
                           x:Name="FooterInterface" Text="eno1"/>
                <TextBlock Text="|" FontSize="9" Foreground="#1A1A1A" Margin="0,0,14,0"/>
                <TextBlock FontSize="9" Foreground="#2A2A2A" Margin="0,0,14,0"
                           x:Name="FooterPackets" Text="0 packets"/>
                <TextBlock Text="|" FontSize="9" Foreground="#1A1A1A" Margin="0,0,14,0"/>
                <TextBlock Text="● MONITORING" FontSize="9" Foreground="{StaticResource StatusGreen}"
                           x:Name="FooterStatus"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>