<UserControl x:Class="Ipsae.View.Pages.EventListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ipsae.View.Pages"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             FontFamily="Segoe UI">

    <Grid Background="{StaticResource BgMain}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Style="{StaticResource BackButton}" Command="{Binding NavigateHomeCommand}">
                    <TextBlock><Run Text="← "/><Run Text="홈"/></TextBlock>
                </Button>
                <Border Width="1" Height="16" Background="{StaticResource Border}" Margin="12,0"/>
                <TextBlock Text="탐지 목록" FontSize="13" FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
            </StackPanel>
            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center"
                       FontSize="11" Foreground="{StaticResource TextMuted}"
                       Text="{Binding TotalCount, StringFormat=총 {0}건}"/>
        </Grid>

        <ListView Grid.Row="1" Margin="20,8,20,16"
                  Background="Transparent" BorderThickness="0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  VirtualizingStackPanel.IsVirtualizing="True"
                  VirtualizingStackPanel.VirtualizationMode="Recycling"
                  ItemsSource="{Binding Events}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0,0,0,4"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="{StaticResource BgCard}" Padding="14,12,18,12"
                            BorderBrush="{StaticResource Border}" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding ProcessName}" FontSize="13" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimary}" Margin="0,0,0,4"/>
                                <TextBlock FontSize="11" Foreground="{StaticResource TextMuted}">
                                    <Run Text="{Binding IpAddress}"/>
                                    <Run Text=" · "/>
                                    <Run Text="{Binding FilePath}"/>
                                </TextBlock>
                            </StackPanel>

                            <TextBlock Grid.Column="1" Text="{Binding DetectedDate}"
                                       FontSize="11" Foreground="#444444"
                                       VerticalAlignment="Center" Margin="16,0"/>

                            <Border Grid.Column="2" Padding="8,3"
                                    Background="{Binding Severity, Converter={StaticResource SeverityToColor}, ConverterParameter=bg}"
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding Severity}" FontSize="10" FontWeight="SemiBold"
                                           Foreground="{Binding Severity, Converter={StaticResource SeverityToColor}}"/>
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
