<Page x:Class="Ipsae.View.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ipsae.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage" FontFamily="Segoe UI">

    <Page.Resources>
        <SolidColorBrush x:Key="BgMain" Color="#0C0C0C"/>
        <SolidColorBrush x:Key="BgCard" Color="#131313"/>
        <SolidColorBrush x:Key="Border" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#DDDDDD"/>
        <SolidColorBrush x:Key="TextMuted" Color="#555555"/>
        <SolidColorBrush x:Key="TextLabel" Color="#666666"/>
        <SolidColorBrush x:Key="ValueBg" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="StatusGreen" Color="#55AA66"/>
        <SolidColorBrush x:Key="DangerRed" Color="#CC5555"/>
        <SolidColorBrush x:Key="StatBlue" Color="#88CCFF"/>

        <Style x:Key="BackButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="12,3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1A1A1A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource StatBlue}"/>
            <Setter Property="BorderBrush" Value="{StaticResource StatBlue}"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="14,3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#111520"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Background="{StaticResource BgMain}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Style="{StaticResource BackButton}" x:Name="BackButton" Click="BackButton_Click">
                    <TextBlock><Run Text="← "/><Run Text="홈"/></TextBlock>
                </Button>
                <Border Width="1" Height="16" Background="{StaticResource Border}" Margin="12,0"/>
                <TextBlock Text="시스템 설정" FontSize="13" FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <UniformGrid Columns="2" Margin="20,8,20,20">
                <Border Background="{StaticResource BgCard}" BorderBrush="{StaticResource Border}"
                        BorderThickness="1" Padding="20" Margin="0,0,5,10">
                    <StackPanel>
                        <TextBlock Text="사용자 설정" FontSize="12" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}" Margin="0,0,0,18"/>
                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="알람 타입" FontSize="12" Foreground="{StaticResource TextLabel}"
                                       VerticalAlignment="Center"/>
                            <Border Background="{StaticResource ValueBg}" Padding="10,2"
                                    HorizontalAlignment="Right">
                                <TextBlock Text="Type 1" FontSize="11" Foreground="#888888"
                                           x:Name="AlarmTypeText"/>
                            </Border>
                        </Grid>
                        <Grid>
                            <TextBlock Text="실행 알림" FontSize="12" Foreground="{StaticResource TextLabel}"
                                       VerticalAlignment="Center"/>
                            <Border Background="#1A1010" Padding="10,2" HorizontalAlignment="Right">
                                <TextBlock Text="Off" FontSize="11" Foreground="{StaticResource DangerRed}"
                                           x:Name="RunAlertText"/>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Background="{StaticResource BgCard}" BorderBrush="{StaticResource Border}"
                        BorderThickness="1" Padding="20" Margin="5,0,0,10">
                    <StackPanel>
                        <TextBlock Text="업데이트" FontSize="12" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}" Margin="0,0,0,18"/>
                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="자동 업데이트" FontSize="12" Foreground="{StaticResource TextLabel}"
                                       VerticalAlignment="Center"/>
                            <Border Background="#101A10" Padding="10,2" HorizontalAlignment="Right">
                                <TextBlock Text="On" FontSize="11" Foreground="{StaticResource StatusGreen}"
                                           x:Name="AutoUpdateText"/>
                            </Border>
                        </Grid>
                        <Grid>
                            <TextBlock Text="위협 목록 업데이트" FontSize="12"
                                       Foreground="{StaticResource TextLabel}" VerticalAlignment="Center"/>
                            <Border Background="{StaticResource ValueBg}" Padding="10,2"
                                    HorizontalAlignment="Right">
                                <TextBlock Text="1 Day" FontSize="11" Foreground="#888888"
                                           x:Name="ThreatUpdateText"/>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Background="{StaticResource BgCard}" BorderBrush="{StaticResource Border}"
                        BorderThickness="1" Padding="20" Margin="0,0,5,0">
                    <StackPanel>
                        <TextBlock Text="네트워크 설정" FontSize="12" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}" Margin="0,0,0,18"/>
                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="인터페이스 선택" FontSize="12"
                                       Foreground="{StaticResource TextLabel}" VerticalAlignment="Center"/>
                            <Border Background="{StaticResource ValueBg}" Padding="10,2"
                                    HorizontalAlignment="Right">
                                <TextBlock Text="eno1" FontSize="11" Foreground="#888888"
                                           FontFamily="Consolas" x:Name="InterfaceText"/>
                            </Border>
                        </Grid>
                        <Grid>
                            <TextBlock Text="최대 검사 지연시간" FontSize="12"
                                       Foreground="{StaticResource TextLabel}" VerticalAlignment="Center"/>
                            <Border Background="{StaticResource ValueBg}" Padding="10,2"
                                    HorizontalAlignment="Right">
                                <TextBlock Text="3 Sec" FontSize="11" Foreground="#888888"
                                           x:Name="MaxDelayText"/>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Background="{StaticResource BgCard}" BorderBrush="{StaticResource Border}"
                        BorderThickness="1" Padding="20" Margin="5,0,0,0">
                    <StackPanel>
                        <TextBlock Text="백업" FontSize="12" FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}" Margin="0,0,0,18"/>
                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="설정 내보내기" FontSize="12"
                                       Foreground="{StaticResource TextLabel}" VerticalAlignment="Center"/>
                            <Button Content="Export" Style="{StaticResource ActionButton}"
                                    x:Name="ExportButton" Click="ExportButton_Click"/>
                        </Grid>
                        <Grid>
                            <TextBlock Text="설정 가져오기" FontSize="12"
                                       Foreground="{StaticResource TextLabel}" VerticalAlignment="Center"/>
                            <Button Content="Import" Style="{StaticResource ActionButton}"
                                    x:Name="ImportButton" Click="ImportButton_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </ScrollViewer>
    </Grid>
</Page>