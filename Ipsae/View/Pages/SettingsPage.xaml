<Page x:Class="Ipsae.View.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ipsae.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage" FontFamily="Segoe UI">

    <Page.Resources>
        <SolidColorBrush x:Key="BgPage" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="BgCard" Color="#222222"/>
        <SolidColorBrush x:Key="BorderCard" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#888888"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#2980B9"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#27AE60"/>
        <SolidColorBrush x:Key="AccentRed" Color="#E74C3C"/>
        <SolidColorBrush x:Key="BgControl" Color="#333333"/>
        <SolidColorBrush x:Key="BorderControl" Color="#555555"/>

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BgCard}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="24,20"/>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Margin" Value="0,0,0,18"/>
        </Style>

        <Style x:Key="SettingLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ValueBadge" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BgControl}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderControl}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,5"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#CCC"/>
        </Style>

        <Style x:Key="ActionButtonGreen" TargetType="Button">
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource AccentGreen}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButtonBlue" TargetType="Button" BasedOn="{StaticResource ActionButtonGreen}">
            <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource BgPage}">
        <Grid Margin="32,28">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="사용자 설정" Style="{StaticResource SectionTitle}"/>

                    <Grid Margin="0,0,0,14">
                        <TextBlock Text="알람 타입" Style="{StaticResource SettingLabel}"/>
                        <Border Style="{StaticResource ValueBadge}">
                            <TextBlock Text="Type 1" Style="{StaticResource ValueText}" x:Name="AlarmTypeText"/>
                        </Border>
                    </Grid>

                    <Grid>
                        <TextBlock Text="실행 알림" Style="{StaticResource SettingLabel}"/>
                        <Border Style="{StaticResource ValueBadge}" Background="#331111" BorderBrush="#E74C3C">
                            <TextBlock Text="Off" Style="{StaticResource ValueText}" Foreground="#E74C3C"
                                       x:Name="RunAlertText"/>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="업데이트" Style="{StaticResource SectionTitle}"/>

                    <Grid Margin="0,0,0,14">
                        <TextBlock Text="자동 업데이트" Style="{StaticResource SettingLabel}"/>
                        <Border Style="{StaticResource ValueBadge}" Background="#112211" BorderBrush="#27AE60">
                            <TextBlock Text="On" Style="{StaticResource ValueText}" Foreground="#27AE60"
                                       x:Name="AutoUpdateText"/>
                        </Border>
                    </Grid>

                    <Grid>
                        <TextBlock Text="위협 목록 업데이트" Style="{StaticResource SettingLabel}"/>
                        <Border Style="{StaticResource ValueBadge}">
                            <TextBlock Text="1 Day" Style="{StaticResource ValueText}" 
                                       x:Name="ThreatUpdateText"/>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="네트워크 설정" Style="{StaticResource SectionTitle}"/>

                    <Grid Margin="0,0,0,14">
                        <TextBlock Text="인터페이스 선택" Style="{StaticResource SettingLabel}"/>
                        <Border Style="{StaticResource ValueBadge}">
                            <TextBlock Text="eno1" Style="{StaticResource ValueText}" FontFamily="Consolas"
                                       x:Name="InterfaceText"/>
                        </Border>
                    </Grid>

                    <Grid>
                        <TextBlock Text="최대 검사 지연시간" Style="{StaticResource SettingLabel}"/>
                        <Border Style="{StaticResource ValueBadge}">
                            <TextBlock Text="3 Sec" Style="{StaticResource ValueText}" 
                                       x:Name="MaxDelayText"/>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="백업" Style="{StaticResource SectionTitle}"/>

                    <Grid Margin="0,0,0,14">
                        <TextBlock Text="설정 내보내기" Style="{StaticResource SettingLabel}"/>
                        <Button Content="Export" Style="{StaticResource ActionButtonGreen}"
                                x:Name="ExportButton" />
                    </Grid>

                    <Grid>
                        <TextBlock Text="설정 가져오기" Style="{StaticResource SettingLabel}"/>
                        <Button Content="Import" Style="{StaticResource ActionButtonBlue}"
                                x:Name="ImportButton" />
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>