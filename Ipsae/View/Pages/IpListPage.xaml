<UserControl x:Class="Ipsae.View.Pages.IpListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ipsae.View.Pages"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             FontFamily="Segoe UI">

    <Grid Background="{StaticResource BgMain}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Style="{StaticResource BackButton}" Command="{Binding NavigateHomeCommand}">
                    <TextBlock><Run Text="← "/><Run Text="홈"/></TextBlock>
                </Button>
                <Border Width="1" Height="16" Background="{StaticResource Border}" Margin="12,0"/>
                <TextBlock FontSize="13" FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"
                           Text="{Binding PageTitle}"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="20,8,20,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0"
                     Background="{StaticResource BgCard}"
                     BorderBrush="{StaticResource Border}" BorderThickness="1,1,0,1"
                     Foreground="{StaticResource TextPrimary}"
                     CaretBrush="{StaticResource TextPrimary}"
                     FontFamily="Consolas" FontSize="12"
                     Padding="14,8" VerticalContentAlignment="Center"
                     Text="{Binding IpInput, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Grid.Column="1" Content="추가" Style="{StaticResource AddButton}"
                    Command="{Binding AddIpCommand}"/>
        </Grid>

        <ListView Grid.Row="2" Margin="20,0,20,16"
                  Background="Transparent" BorderThickness="0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ItemsSource="{Binding IpEntries}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0,0,0,4"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="{StaticResource BgCard}"
                            BorderBrush="{StaticResource Border}" BorderThickness="1"
                            Padding="16,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{Binding IpAddress}"
                                       FontSize="13" FontFamily="Consolas"
                                       Foreground="{StaticResource TextPrimary}"
                                       VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="1" VerticalAlignment="Center"
                                       FontSize="11" Foreground="{StaticResource TextMuted}"
                                       Margin="0,0,14,0">
                                <Run Text="탐지: "/><Run Text="{Binding FindCount}"/><Run Text="회"/>
                            </TextBlock>

                            <Button Grid.Column="2" Content="✕" Style="{StaticResource DeleteButton}"
                                    Command="{Binding DataContext.DeleteIpCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
