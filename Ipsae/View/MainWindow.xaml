<Window
        x:Class="Ipsae.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ipsae.View"
        xmlns:behavior="clr-namespace:Ipsae.Behavior"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="None" FontFamily="/Resource/#나눔스퀘어 네오 Regular">
    <Window.Resources>
        <Style x:Key="AnimatedButtonStyle" TargetType="Button">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                x:Name="ButtonBorder">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}" 
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorder" 
                                                          Storyboard.TargetProperty="Background.Color" 
                                                          To="#C5D89D" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorder" 
                                                          Storyboard.TargetProperty="Background.Color" 
                                                          Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="#EBF4DD" x:Name="RootGrid" behavior:WindowDragBehavior.IsEnabled="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="72"/>
            <ColumnDefinition Width="128" x:Name="SidebarColumn"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="2" x:Name="WindowStateBorder">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Width="30" Height="25" Style="{StaticResource AnimatedButtonStyle}" Background="Transparent" BorderThickness="0" x:Name="MinimizeButton" Click="MinimizeButton_Click">
                    <Image Source="/Resource/minimize.png" Width="15" Height="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
                <Button Width="30" Height="25" Style="{StaticResource AnimatedButtonStyle}" Background="Transparent" BorderThickness="0" x:Name="MaximizeButton" Click="MaximizeButton_Click">
                    <Image Source="/Resource/maximize.png" Width="15" Height="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
                <Button Width="30" Height="25" Style="{StaticResource AnimatedButtonStyle}" Background="Transparent" BorderThickness="0" x:Name="CloseButton" Click="CloseButton_Click">
                    <Image Source="/Resource/close.png" Width="15" Height="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
            </StackPanel>
        </Border>
        
        
        <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="DarkGray" BorderThickness="1" x:Name="SidebarBorder">
            <Grid Opacity="0.95" Background="#FFFFFFF8" x:Name="SidebarGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="10"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Background="#D8C9A7" HorizontalAlignment="Stretch" Orientation="Horizontal" x:Name="LogoTitle" behavior:WindowDragBehavior.IsEnabled="True">
                    <Image Margin="15 0 5 0" Width="50" Height="50" Source="/Resource/leaf.png" HorizontalAlignment="Center" IsEnabled="False"/>
                    <TextBlock Text="Ipsae IDS" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Left" IsEnabled="False" FontFamily="/Resource/#나눔스퀘어 네오 Bold"/>
                </StackPanel>

                <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource AnimatedButtonStyle}" BorderThickness="0" 
                        HorizontalContentAlignment="Left" Background="White" Padding="17.5 0 0 0" x:Name="StatusButton">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Resource/status.png" Width="35" Height="35" Margin="0 0 10.5 0"/>
                        <TextBlock Text="서비스 상태" FontSize="16" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Row="2" Grid.Column="0" Style="{StaticResource AnimatedButtonStyle}" BorderThickness="0" 
                        HorizontalContentAlignment="Left" Background="White" Padding="17.5 0 0 0" x:Name="EventButton">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Resource/list.png" Width="35" Height="35" Margin="0 0 10.5 0"/>
                        <TextBlock Text="탐지 목록" FontSize="16" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Row="3" Grid.Column="0" Style="{StaticResource AnimatedButtonStyle}" BorderThickness="0" 
                        HorizontalContentAlignment="Left" Background="White" Padding="15 0 0 0" x:Name="WhitelistButton">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Resource/whitelist.png" Width="40" Height="40" Margin="0 0 8 0"/>
                        <TextBlock Text="Whitelist IP" FontSize="16" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Row="4" Grid.Column="0" Style="{StaticResource AnimatedButtonStyle}" BorderThickness="0" 
                        HorizontalContentAlignment="Left" Background="White" Padding="15 0 0 0" x:Name="BlacklistButton">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Resource/blacklist.png" Width="40" Height="40" Margin="0 0 8 0"/>
                        <TextBlock Text="Blacklist IP" FontSize="16" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Row="5" Grid.Column="0" Style="{StaticResource AnimatedButtonStyle}" BorderThickness="0" 
                        HorizontalContentAlignment="Left" Background="White" Padding="17.5 0 0 0" x:Name="SettingButton">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Resource/setting.png" Width="35" Height="35" Margin="0 0 10.5 0"/>
                        <TextBlock Text="시스템 설정" FontSize="16" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <ToggleButton Grid.Row="7" Grid.Column="0" Background="White" Width="40" Height="40" HorizontalAlignment="Right" 
                              BorderThickness="0" Margin="15 0" IsChecked="{Binding IsSidebarExpanded}" x:Name="SidebarToggleButton">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FFF6E0"/>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FFE082"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Resource/sidebar.png" Width="22" />
                    </StackPanel>
                </ToggleButton>
            </Grid>
        </Border>

        <Frame Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Background="White" x:Name="MainFrame" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
