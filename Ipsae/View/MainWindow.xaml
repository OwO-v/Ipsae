<Window
    x:Class="Ipsae.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Ipsae.View"
    xmlns:behavior="clr-namespace:Ipsae.Behavior"
    mc:Ignorable="d"
    Title="Ipsae IDS" Height="720" Width="1280" WindowStyle="None" FontFamily="Segoe UI">

    <Border BorderBrush="#222" BorderThickness="1">
        <Grid Background="{StaticResource BgMain}">
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="{StaticResource BgMain}" behavior:WindowDragBehavior.IsEnabled="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="24,0,0,0">
                    <Image Source="/Resource/leaf.png" Width="20" Height="20" Margin="0,0,10,0"/>
                    <TextBlock Text="Ipsae IDS" FontSize="15" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                    <TextBlock Text="v1.0.0" FontSize="10" Foreground="#2A2A2A"
                               VerticalAlignment="Center" Margin="8,2,0,0"/>
                    <Border Width="1" Height="14" Background="{StaticResource Border}" Margin="16,0"/>
                    <Ellipse Width="6" Height="6" Fill="{StaticResource StatusGreen}" VerticalAlignment="Center"
                             Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding ServiceStatus}" FontSize="11" Foreground="{StaticResource TextDim}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource WindowControlButton}"
                            Command="{Binding MinimizeCommand}">
                        <Image Source="/Resource/minimize.png" Width="12" Height="12"/>
                    </Button>
                    <Button Style="{StaticResource WindowControlButton}"
                            Command="{Binding MaximizeCommand}">
                        <Image Source="/Resource/maximize.png" Width="12" Height="12"/>
                    </Button>
                    <Button Style="{StaticResource CloseButtonStyle}"
                            Command="{Binding CloseCommand}">
                        <Image Source="/Resource/close.png" Width="12" Height="12"/>
                    </Button>
                </StackPanel>
            </Grid>

            <Border Grid.Row="1" BorderBrush="{StaticResource Border}" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid Visibility="{Binding IsHomeVisible, Converter={StaticResource BoolToVisibility}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <UniformGrid Grid.Row="1" Grid.Column="1" Columns="3" Width="720">
                            <Button Style="{StaticResource TileButton}"
                                    Command="{Binding NavigateToStatusCommand}" Margin="0,0,5,5">
                                <StackPanel>
                                    <TextBlock Text="서비스 상태" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                                    <TextBlock Text="동작 중" FontSize="12" Foreground="#555" Margin="0,0,0,18"/>
                                    <TextBlock Text="{Binding ServiceStatus}" FontSize="9" Foreground="#44AA55" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource TileButton}"
                                    Command="{Binding NavigateToEventsCommand}" Margin="5,0,5,5">
                                <StackPanel>
                                    <TextBlock Text="탐지 목록" FontSize="14" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding EventCount}" FontSize="12" Foreground="#555" Margin="0,0,0,18"/>
                                    <TextBlock Text="{Binding EventThreats}" FontSize="9" Foreground="#88CCFF"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource TileButton}"
                                    Command="{Binding NavigateToWhitelistCommand}" Margin="5,0,0,5">
                                <StackPanel>
                                    <TextBlock Text="Whitelist IP" FontSize="14" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding WhitelistCount}" FontSize="12" Foreground="#555" Margin="0,0,0,18"/>
                                    <TextBlock Text="{Binding WhitelistEntries}" FontSize="9" Foreground="#AAAAAA"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource TileButton}"
                                    Command="{Binding NavigateToBlacklistCommand}" Margin="0,5,5,0">
                                <StackPanel>
                                    <TextBlock Text="Blacklist IP" FontSize="14" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding BlacklistCount}" FontSize="12" Foreground="#555" Margin="0,0,0,18"/>
                                    <TextBlock Text="{Binding BlacklistEntries}" FontSize="9" Foreground="#CC6666"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource TileButton}"
                                    Command="{Binding NavigateToSettingsCommand}" Margin="5,5,0,0">
                                <StackPanel>
                                    <TextBlock Text="시스템 설정" FontSize="14" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                                    <TextBlock Text="설정 완료" FontSize="12" Foreground="#555" Margin="0,0,0,18"/>
                                    <TextBlock Text="CONFIGURED" FontSize="9" Foreground="#999999"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                        </UniformGrid>
                    </Grid>

                    <ContentControl Content="{Binding CurrentPageViewModel}"
                                    Visibility="{Binding IsHomeVisible, Converter={StaticResource BoolToVisibility}, ConverterParameter=invert}"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
