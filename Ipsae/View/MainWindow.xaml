<Window
    x:Class="Ipsae.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Ipsae.View"
    xmlns:behavior="clr-namespace:Ipsae.Behavior"
    mc:Ignorable="d"
    Title="Ipsae IDS" Height="720" Width="1280" WindowStyle="None" FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowControlButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#E74C3C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="8,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="NavBd" Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="14,0">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="NavBd" Property="Background" Value="#1F1F1F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavButtonActiveStyle" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Background" Value="#1A2980B9"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="8,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="NavBd" Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="14,0"
                                BorderBrush="{StaticResource AccentBlueBrush}" BorderThickness="2,0,0,0">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SidebarToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="ToggleBd" Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ToggleBd" Property="Background" Value="#1F1F1F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#333" BorderThickness="1">
        <Grid Background="{StaticResource BgDarkBrush}" x:Name="RootGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" x:Name="SidebarColumn"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                  Background="{StaticResource BgDarkBrush}"
                  behavior:WindowDragBehavior.IsEnabled="True">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource WindowControlButton}" 
                            x:Name="MinimizeButton" Click="MinimizeButton_Click">
                        <Image Source="/Resource/minimize.png" Width="12" Height="12"/>
                    </Button>
                    <Button Style="{StaticResource WindowControlButton}" 
                            x:Name="MaximizeButton" Click="MaximizeButton_Click">
                        <Image Source="/Resource/maximize.png" Width="12" Height="12"/>
                    </Button>
                    <Button Style="{StaticResource CloseButtonStyle}" 
                            x:Name="CloseButton" Click="CloseButton_Click">
                        <Image Source="/Resource/close.png" Width="12" Height="12"/>
                    </Button>
                </StackPanel>
            </Grid>

            <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" 
                    BorderBrush="{StaticResource BorderDarkBrush}" 
                    BorderThickness="0,0,1,0"
                    x:Name="SidebarBorder">
                <Grid Background="{StaticResource BgDarkBrush}" x:Name="SidebarGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="64"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" 
                                VerticalAlignment="Center" Margin="20,0,0,0"
                                behavior:WindowDragBehavior.IsEnabled="True">
                        <Border Background="{StaticResource AccentBrush}" 
                                Width="36" Height="36" CornerRadius="8">
                            <Image Source="/Resource/leaf.png" Width="24" Height="24"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Margin="12,0,0,0" VerticalAlignment="Center"
                                    x:Name="LogoText">
                            <TextBlock Text="Ipsae IDS" FontSize="15" FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="v1.0.0" FontSize="10" 
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,-1,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Grid.Row="1" Height="1" Background="{StaticResource BorderDarkBrush}" 
                            Margin="16,4,16,8"/>

                    <Button Grid.Row="2" Style="{StaticResource NavButtonStyle}" 
                            x:Name="StatusButton">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resource/status.png" Width="20" Height="20" Margin="0,0,12,0"/>
                            <TextBlock Text="서비스 상태" FontSize="13"
                                       Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"
                                       x:Name="StatusButtonText"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Row="3" Style="{StaticResource NavButtonStyle}" 
                            x:Name="EventButton" Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resource/list.png" Width="20" Height="20" Margin="0,0,12,0"/>
                            <TextBlock Text="탐지 목록" FontSize="13" 
                                       Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"
                                       x:Name="EventButtonText"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Row="4" Style="{StaticResource NavButtonStyle}" 
                            x:Name="WhitelistButton">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resource/whitelist.png" Width="20" Height="20" Margin="0,0,12,0"/>
                            <TextBlock Text="Whitelist IP" FontSize="13" 
                                       Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"
                                       x:Name="WhitelistButtonText"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Row="5" Style="{StaticResource NavButtonStyle}" 
                            x:Name="BlacklistButton">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resource/blacklist.png" Width="20" Height="20" Margin="0,0,12,0"/>
                            <TextBlock Text="Blacklist IP" FontSize="13" 
                                       Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"
                                       x:Name="BlacklistButtonText"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Row="6" Style="{StaticResource NavButtonStyle}" 
                            x:Name="SettingButton">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resource/setting.png" Width="20" Height="20" Margin="0,0,12,0"/>
                            <TextBlock Text="시스템 설정" FontSize="13" 
                                       Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"
                                       x:Name="SettingButtonText"/>
                        </StackPanel>
                    </Button>

                    <ToggleButton Grid.Row="8" Style="{StaticResource SidebarToggleStyle}"
                                  Width="36" Height="36" Margin="0,0,14,8"
                                  HorizontalAlignment="Right"
                                  IsChecked="{Binding IsSidebarExpanded}" 
                                  x:Name="SidebarToggleButton">
                        <Image Source="/Resource/sidebar.png" Width="18"/>
                    </ToggleButton>

                    <!-- Footer -->
                    <StackPanel Grid.Row="9" Margin="20,0,0,14">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="{StaticResource StatusGreenBrush}" 
                                     Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="서비스 실행 중" FontSize="11" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       x:Name="ServiceStatusText"/>
                        </StackPanel>
                        <TextBlock Text="Ipsae IDS © 2026" FontSize="10" 
                                   Foreground="#444" Margin="0,4,0,0"
                                   x:Name="CopyrightText"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="48"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="{StaticResource BgDarkBrush}" 
                        BorderBrush="{StaticResource BorderDarkBrush}" 
                        BorderThickness="0,0,0,1">
                    <Grid Margin="24,0">
                        <TextBlock Text="서비스 상태" FontSize="14" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" 
                                   VerticalAlignment="Center" HorizontalAlignment="Left"
                                   x:Name="PageTitleText"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" 
                                    VerticalAlignment="Center">
                            <Ellipse Width="8" Height="8" Fill="{StaticResource StatusGreenBrush}" 
                                     Margin="0,0,8,0"/>
                            <TextBlock Text="모니터링 중" FontSize="12" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       x:Name="MonitoringStatusText"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Frame Grid.Row="1" Background="{StaticResource BgContentBrush}" 
                       x:Name="MainFrame" 
                       NavigationUIVisibility="Hidden"/>
            </Grid>
        </Grid>
    </Border>
</Window>